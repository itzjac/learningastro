---
import type { GetStaticPaths } from "astro";
import type {PokemonListResponse} from '../../interfaces/pokemon-list.response.ts';
import MainLayout from "../../layouts/MainLayout.astro";
import PokemonCard from "../../components/PokemonCard.astro"

import "../../styles/global.css"
import Title from "@components/shared/Title.astro";

export const getStaticPaths = ( async( { paginate }) => {
	
	const resp = await fetch('https://pokeapi.co/api/v2/pokemon?limit=151');
	const {results} = (await resp.json()) as PokemonListResponse;
	return paginate(results, { pageSize: 20 });
}) satisfies GetStaticPaths;

const {page} = Astro.props;
---

<MainLayout title="HOME">
	<Title>
		Pokemons-Pages
	</Title>
	<hr />
	<section aria-label="Pokemon's list" 
		class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-5 gap-4">
			{ page.data.map( ( {name, url} ) => (<PokemonCard name={name} url={url}/>))}
	</section>
	<section
		class="flex px-10 mt-10 gap-2 items-center"
	>
	<!-- {
		page.url.prev && (
			<a class="btn" href={page.url.prev}>Prev</a>
		)
	} -->
		<a 
		class:list={[
		'btn',
		{
			disabled: !page.url.prev,
		},
		]}
			 href={page.url.prev}>Prev</a>
		<span class="text-xl font-bold" > {page.currentPage} </span>
		<a class:list= {[
		'btn',
		{
			disabled: !page.url.next,
		} 
		]}
		href={page.url.next}>Next</a>
		<div class="flex flex-1"></div>
	</section>

</MainLayout>
<!-- bg-blue and rounded-md doesn't work -->
<style>
	@reference "../../styles/global.css"
	.btn{
		@apply bg-blue-500 text-white rounded-md;
	}
	.disabled {
		@apply bg-gray-600 text-gray-400
	}
</style>