---
// Server Only
import MainLayout from '../layouts/MainLayout.astro';

const name = 'Isaac Vega'
const title = 'IV - Home Page'
---

<MainLayout title ="Home">
	<p> Page HOME, wrapped in layout!</p>
	<p> { new Date().toLocaleTimeString() } </p>
		<p id ="current-id"> </p>

		<footer>
		</footer>

		<script>
			// Client Only
			const footer = document.querySelector('footer') as HTMLElement;
			const p = document.querySelector('#current-id') as HTMLParagraphElement;

			const currentYear: number = new Date().getFullYear();
			const currentTime: string = new Date().toLocaleTimeString();

			footer.innerText = `Current year: ${ currentYear }`;  
			p.innerText = `Real time now: ${ currentTime }`;  
		</script>
</MainLayout>
